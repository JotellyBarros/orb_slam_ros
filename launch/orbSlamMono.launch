<launch>
    <!-- load the orb_slam_ros -->
    <node name="orb_slam_ros" pkg="orb_slam_ros" type="mono_node_KITTI" args="$(find orb_slam_ros)/config/TpLink_NC200.yaml $(find orb_slam_ros)/Vocabulary/ORBvoc.bin" output="screen">
        <remap from="/camera/image_raw" to="/camera/image_raw" />

        <param name="publish_pointcloud" type="bool" value="true" />
        <param name="localize_only" type="bool" value="false" />
        <param name="reset_map" type="bool" value="true" />
        <param name="pointcloud_frame_id" type="string" value="map" />
        <param name="camera_frame_id" type="string" value="cameras" />
        <param name="min_num_kf_in_map" type="int" value="5" />
    </node>

    <!-- load the rqt_console -->
    <!-- <node name="rqt_gui" pkg="rqt_gui" type="rqt_gui"/> -->


    <!--Run the rviz display -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find orb_slam_ros)/rviz/config_file.rviz" />

    <!--Run the video_file topc -->
	<!--<include file="$(find video_stream_opencv)/launch/video_file.launch"/>-->

</launch>